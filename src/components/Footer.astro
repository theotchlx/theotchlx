---
import Social from './Social.astro';

const platforms = [
  ["https://", "www.github.com/", "github", "GitHub", "theotchlx"],
  ["https://", "www.linkedin.com/in/", "linkedin", "LinkedIn", "theotchlx"],
  ["https://", "mastodon.social/", "mastodon", "Mastodon", "@theotchlx"],
  ["https://", "codeberg.org/", "codeberg", "Codeberg", "theotchlx"],
  ["https://", "sr.ht/", "sourcehut", "SourceHut", "~theotchlx"],
  ["mailto:", "", "email", "Email", "theo.tchlx@proton.me"]
];
---

<footer>
  <hr />
  <p>How to reach me:</p>
  <ul>
  {platforms.map(([protocol, url, platform, name, username]) => 
    <li>
      <Social protocol={protocol} url={url} platform={platform} name={name} username={username} />
    </li>
  )}
  </ul>
  <p>
    The code for this website can be found on <a href="https://www.github.com/theotchlx/theotchlx">GitHub</a>.
  </p>
</footer>

<style>
  footer {
    margin-top: 2rem;
  }

  ul {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
</style>
